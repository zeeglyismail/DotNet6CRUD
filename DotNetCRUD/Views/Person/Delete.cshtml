@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}
<a asp-controller="Person" asp-action="Index" class="link-hover">Back to Persons List</a>
<h1>Delete Person</h1>
<h1>Are you sure you want to delete this person?</h1>
<div class="w-50">
    <form asp-controller="Person" asp-action="Delete" method="post">
        <input type="hidden" asp-for="PersonID" />
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled="disabled" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled="disabled" />
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
            </div>
        </div>
    </form>
</div>